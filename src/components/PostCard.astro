---
import FormattedDate from "./FormattedDate.astro";

const { href, title, description, date, image } = Astro.props;
---
<a href={href} class="md:min-w-[400px] md:max-w-[900px] md:w-full md:h-40 md:block mx-auto mb-6 md:mb-3">
    <div
        class="flex flex-col w-full md:flex-row overflow-hidden bg-slate-800 rounded-xl bg-opacity-60 backdrop-filter backdrop-blur-xl drop-shadow-sm hover:drop-shadow-xl transition-all mb-5 md:mb-3"
    >
        <div class="md:mr-1">
            <img class="md:h-40 md:min-w-[304.75px] w-auto object-cover" src={image} alt="" />
        </div>
        <div class="flex flex-col p-2 justify-between">
            <div>
                <div class="font-sans font-bold text-xl md:text-2xl title-holder transition-all duration-150 ease-in-out">{title}</div>
                <div class="text-md md:text-lg">{description}</div>
            </div>

            <div class="text-md md:text-lg mt-1"><FormattedDate date={date} /></div>
        </div>
    </div>
</a>

<style>
    a:hover div.title-holder{
        color: rgb(45 212 191);
    }
</style>
